---
import Layout from '../components/Layout.astro';
---
<Layout title="Contact">
  <h1 class="font-display text-3xl mb-4">Contact</h1>
  <form action="https://formspree.io/f/xkgzldbg" method="POST" class="grid gap-3 max-w-lg">
    <label class="grid gap-1">
      <span class="text-sm">Email</span>
      <input class="bg-transparent border border-fg/30 px-3 py-2" type="email" name="email" required />
    </label>
    <label class="grid gap-1">
      <span class="text-sm">Message</span>
      <textarea class="bg-transparent border border-fg/30 px-3 py-2" name="message" rows="6" required></textarea>
    </label>
    <button class="justify-self-start px-4 py-2 border border-neon text-neon hover:shadow-neon" type="submit">Send</button>
  </form>
  <p class="mt-3 text-xs text-muted">Submissions go to BeerGoggleGames@hotmail.com.</p>
</Layout>
