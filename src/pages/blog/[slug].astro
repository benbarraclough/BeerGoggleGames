---
import Layout from '../../components/Layout.astro';
import { getCollection } from 'astro:content';
import { excludeLegacyNoise } from '../../lib/filters';

export async function getStaticPaths() {
  const items = excludeLegacyNoise(await getCollection('posts'));
  return items.map(item => ({
    params: { slug: (item.slug?.split('/').pop() ?? item.id.split('/').pop()) },
    props: { item }
  }));
}

const { item } = Astro.props;
const d = item.data;
const { Content } = await item.render();
---
<Layout title={d.title}>
  <article class="prose prose-invert max-w-none">
    <h1 class="font-display text-3xl">{d.title}</h1>
    {d.date && <div class="text-sm text-muted mb-4">{d.date}</div>}
    <Content />
  </article>
</Layout>
