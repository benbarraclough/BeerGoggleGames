---
import Layout from '../../components/Layout.astro';
import { withBase } from '../../lib/paths';
import CardLink from '../../components/CardLink.astro';

const title = 'Extras';
const description = 'Extra tools, activities and supporting resources.';
---
<Layout title={title} description={description}>
  <h1 class="font-display text-3xl mb-6">{title}</h1>

  <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 list-none p-0 m-0">
    <CardLink href={withBase('extras/glossary/')} ariaLabel="Glossary">
      <span class="font-semibold leading-snug transition-colors group-hover:text-neon">Glossary</span>
      <span class="text-sm text-muted mt-1">Common terms, slang, and rules you’ll see across games.</span>
    </CardLink>
    <CardLink href={withBase('extras/forfeits/')} ariaLabel="Forfeits">
      <span class="font-semibold leading-snug transition-colors group-hover:text-neon">Forfeits</span>
      <span class="text-sm text-muted mt-1">Punishments and challenges to spice up any game.</span>
    </CardLink>
    <CardLink href={withBase('extras/wheel-of-fortune/')} ariaLabel="Wheel of Fortune">
      <span class="font-semibold leading-snug transition-colors group-hover:text-neon">Wheel of Fortune</span>
      <span class="text-sm text-muted mt-1">Spin up random dares and actions for the group.</span>
    </CardLink>
    <CardLink href={withBase('activities/')} ariaLabel="Activities">
      <span class="font-semibold leading-snug transition-colors group-hover:text-neon">Activities</span>
      <span class="text-sm text-muted mt-1">Quick activities and icebreakers to keep the party moving.</span>
    </CardLink>
    <CardLink href={withBase('blog/')} ariaLabel="Blog">
      <span class="font-semibold leading-snug transition-colors group-hover:text-neon">Blog</span>
      <span class="text-sm text-muted mt-1">Guides, how‑tos and party inspiration.</span>
    </CardLink>
  </ul>
</Layout>
