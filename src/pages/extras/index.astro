---
import Layout from '../../components/Layout.astro';

const base = import.meta.env.BASE_URL || '/';

const items = [
  {
    href: `${base}extras/glossary`,
    title: 'Glossary',
    desc: 'Common terms, slang, and rules youâ€™ll see across games.'
  },
  {
    href: `${base}extras/forfeits`,
    title: 'Forfeits',
    desc: 'Punishments and challenges to spice up any game.'
  },
  {
    href: `${base}extras/wheel-of-fortune`,
    title: 'Wheel of Fortune',
    desc: 'Spin up random dares and actions for the group.'
  },
  {
    href: `${base}extras/activities-and-minigames`,
    title: 'Activities & Minigames',
    desc: 'Quick activities and icebreakers to keep the party moving.'
  }
];
---
<Layout title="Extras">
  <h1 class="font-display text-3xl mb-6">Extras</h1>
  <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {items.map((x) => (
      <li class="border border-fg/20 p-4">
        <a class="font-semibold hover:text-neon" href={x.href}>{x.title}</a>
        <p class="text-sm text-muted mt-1">{x.desc}</p>
      </li>
    ))}
  </ul>
</Layout>
