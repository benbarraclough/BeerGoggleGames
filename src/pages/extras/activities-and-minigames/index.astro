---
import Layout from '../../../components/Layout.astro';
import { getCollection } from 'astro:content';
const items = await getCollection('activities');
const base = import.meta.env.BASE_URL || '/';
---
<Layout title="Activities & Minigames">
  <h1 class="font-display text-3xl mb-6">Activities & Minigames</h1>
  <ul class="grid md:grid-cols-2 gap-4">
    {items.map(a => (
      <li class="border border-fg/20 p-4">
        <div class="font-semibold">{a.data.title}</div>
      </li>
    ))}
  </ul>
</Layout>