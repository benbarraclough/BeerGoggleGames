---
import Layout from '../../components/Layout.astro';
import { withBase } from '../../lib/paths';
import CardLink from '../../components/CardLink.astro';

const title = 'Drinks';
const description = 'Browse cocktail and shot recipes.';
---
<Layout title={title} description={description}>
  <h1 class="font-display text-3xl mb-6">{title}</h1>
  <p class="text-sm text-muted mb-6">
    Browse our ready to mix collection of cocktail and shot recipes.
  </p>
  <ul class="grid gap-4 sm:grid-cols-2 list-none p-0 m-0">
    <CardLink
      href={withBase('drinks/cocktail-recipes/')}
      ariaLabel="Cocktail Recipes"
    >
      <span class="font-semibold leading-snug transition-colors group-hover:text-neon">
        Cocktail Recipes
      </span>
      <span class="text-sm text-muted mt-1">Classic & party cocktails.</span>
    </CardLink>
    <CardLink
      href={withBase('drinks/shot-recipes/')}
      ariaLabel="Shot Recipes"
    >
      <span class="font-semibold leading-snug transition-colors group-hover:text-neon">
        Shot Recipes
      </span>
      <span class="text-sm text-muted mt-1">Quick hitters & crowd pleasers.</span>
    </CardLink>
  </ul>
</Layout>
