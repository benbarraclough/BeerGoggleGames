---
/**
 * Site layout with robust base normalization.
 * Ensures: leading slash, trailing slash.
 */
const {
  title = 'Beer Goggle Games',
  description = 'Drinking games, cocktails, party activities & more.',
  noindex = false
} = Astro.props;

const siteTitle = 'Beer Goggle Games';
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;

// Normalize base
const rawBase = import.meta.env.BASE_URL || '/';
let base = rawBase;
if (!base.startsWith('/')) base = '/' + base;
if (!base.endsWith('/')) base = base + '/';

const canonical = new URL(Astro.url.pathname, Astro.site ?? 'https://benbarraclough.github.io/BeerGoggleGames').toString();
// Use image inside /public/images/ (adjust if you duplicated file at root)
const ogImage = `${base}images/og-default.png`;
---
<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <title>{fullTitle}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href={canonical} />
    {noindex && <meta name="robots" content="noindex" />}
    <meta property="og:title" content={fullTitle} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    {description && <meta name="twitter:description" content={description} />}
    <meta name="twitter:image" content={ogImage} />
    <link rel="icon" type="image/png" href={`${base}favicon.png`} />
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased">
    <header class="border-b bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 py-4 flex flex-wrap items-center gap-4">
        <a href={base} class="font-bold text-lg">{siteTitle}</a>
        <nav class="flex flex-wrap gap-4 text-sm">
          <a href={`${base}games/`} class="hover:underline">Games</a>
          <a href={`${base}games/types/`} class="hover:underline">Types</a>
          <a href={`${base}games/random/`} class="hover:underline">Random</a>
          <a href={`${base}drinks/`} class="hover:underline">Drinks</a>
          <a href={`${base}drinks/cocktail-recipes/`} class="hover:underline">Cocktails</a>
          <a href={`${base}drinks/shot-recipes/`} class="hover:underline">Shots</a>
            <a href={`${base}activities/`} class="hover:underline">Activities</a>
          <a href={`${base}blog/`} class="hover:underline">Posts</a>
          <a href={`${base}search`} class="hover:underline">Search</a>
          <a href={`${base}rss.xml`} class="hover:underline">RSS</a>
        </nav>
      </div>
    </header>
    <main class="max-w-6xl mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="border-t text-sm text-gray-500 py-8">
      <div class="max-w-6xl mx-auto px-4 space-y-2">
        <div>Â© {new Date().getFullYear()} Beer Goggle Games</div>
        <div><a class="text-blue-600 hover:underline" href={`${base}rss.xml`}>RSS Feed</a></div>
      </div>
    </footer>
  </body>
</html>
