---
import GameSection from '../game/GameSection.astro';
const { title, icon } = Astro.props;
---
<GameSection title={title} icon={icon}>
  <div class="drink-section-content">
    <slot />
  </div>
</GameSection>

<style>
  /* Force list markers even if global prose resets them */
  .drink-section-content ol {
    list-style: decimal !important;
    padding-left: 1.3rem;
    margin: 0;
  }
  .drink-section-content ul {
    list-style: disc !important;
    padding-left: 1.3rem;
    margin: 0;
  }
  .drink-section-content li {
    margin: 0.3rem 0;
  }
  .drink-section-content li::marker {
    color: var(--fg-muted, currentColor);
  }
</style>
